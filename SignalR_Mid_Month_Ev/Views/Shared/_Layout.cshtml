<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    <style>
        body {
            padding-top: 70px;
        }
        .main{
            min-height: calc(100vh - 120px);
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-light bg-white navbar-expand-md fixed-top border-bottom shadow-sm">
        <div class="container-fluid">
            <span>EV_SignalR</span>
            <button class="navbar-toggler"   type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarScroll">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>

                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid main">
        @RenderBody()
        
    </div>
    <div class="container-fluid">
        
        <footer>
            <p>all rights reserved &copy; @DateTime.Now.Year - My SignalR Application</p>
        </footer>
    </div>
    @RenderSection("scripts", false)

</body>
</html>
